<style>
    #editor-normal-content {
        height: 100%;
        width: 100%;
        min-height: 300px;
        box-sizing: border-box;
    }
</style>

<div id="editor-normal">
    <textarea id="editor-normal-content"></textarea>
</div>

<script>
        // 
        // The normal editor object.
        // 
        var normal_editor = (function () {
            var target = document.getElementById('editor-normal-content');

            return {
                open: function (source, mime) {
                    target.value = source;
                },
                close: function () {
                    target.value = "";
                    target.style.display = "none";
                },
                value: function () {
                    return target.value;
                },
                show: function () {
                    target.style.display = "block";
                },
                gettype: function() {
                        return 'normal';
                }
            };
        }());
</script>
