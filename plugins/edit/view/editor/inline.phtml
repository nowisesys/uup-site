<script src="editor/plugins/ckeditor/ckeditor.js" type="text/javascript"></script>

<div id="editor-inline"></div>

<script>
        // 
        // The inline editor object.
        // 
        var inline_editor = (function () {
            var editor;

            return {
                open: function (source, mime) {
                    var config = {};
                    CKEDITOR.config.protectedSource.push(/<\?[\s\S]*?\?>/g);    // Protect PHP code
                    editor = CKEDITOR.appendTo('editor-inline', config, source);
                },
                close: function () {
                    editor.destroy();
                    editor = null;
                },
                value: function () {
                    return editor.getData();
                },
                show: function () {
                    document.getElementById('editor-inline').style.display = "block";
                },
                gettype: function () {
                    return 'inline';
                }
            };
        }());
</script>
