<p>
    <?= sprintf(_("Logon using %s:"), $desc) ?>
</p>
<div style="padding-left: 15px">
    <form action="?auth=<?= $form ?>" method="POST">
        <p>
            <label for="fuser"><?= _("Username:") ?></label>
            <input type="text" id="user" name="<?= $auth->fuser ?>" placeholder="user@example.com">
        </p>
        <p>
            <label for="fpass"><?= _("Password:") ?></label>
            <input type="password" id="pass" name="<?= $auth->fpass ?>" placeholder="<?= _("Type your password") ?>">
        </p>
        <p>
            <input type="checkbox" id="toggle-pass" onclick="toggle_show_password('pass')"> <?= _("Show password") ?>
        </p>
        <p>
            <input type="button" value="<?= _("Back") ?>"  class="w3-btn w3-blue" onclick="window.history.back()">            
            <input type="submit" value="<?= _("Login") ?>" class="w3-btn w3-green" name="<?= $auth->fname ?>">            
        </p>
    </form>
</div>

<script>
        function toggle_show_password(name) {
            var elem = document.getElementById(name);
            if (elem.attributes['type'].value === 'text') {
                elem.attributes['type'].value = 'password';
            } else {
                elem.attributes['type'].value = 'text';
            }
        }
</script>
