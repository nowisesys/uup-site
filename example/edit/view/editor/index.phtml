<script>
        function open_editor(event, editor, file) {

            if (file !== undefined) {
                open_file(file);
            }

            switch (editor) {
                case 'inline':
                    open_editor_section(undefined, 'inline-editor');
                    break;
                case 'source':
                    open_editor_section(undefined, 'source-editor');
                    break;
                case 'normal':
                    open_editor_section(undefined, 'normal-editor');
                    break;
            }

            if (event !== undefined) {
                event.preventDefault();
            }
        }

        function close_editor() {
            open_section('content');
        }

        function open_editor_section(event, sect) {
            var i, x, tablinks;

            x = document.getElementsByClassName("editor-section");
            for (i = 0; i < x.length; i++) {
                x[i].style.display = "none";
            }

            tablinks = document.getElementsByClassName("tablink");
            for (i = 0; i < x.length; i++) {
                tablinks[i].className = tablinks[i].className.replace(" w3-white", "");
            }

            document.getElementById(sect).style.display = "block";

            if (event !== undefined) {
                event.currentTarget.className += " w3-white";
            }

            open_section('editor');    // unhide parent container.
        }

        function open_file(source) {
            api.read(source, function (xhr) {
                var textarea = document.getElementById('file-editor-content');
                textarea.value = xhr.response;
            });
        }

